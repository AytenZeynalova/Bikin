
@model List<Services>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<div class="container">
    <div class="row">
        <div class="col-md-12">

            <a asp-action="create" asp-controller="service"  class="btn btn-primary">Create</a>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Icon</th>
                        <th scope="col">Title</th>
                        <th scope="col">Describtion</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        count++;

                    <tr>
                        <th scope="row">@count</th>
                        <td>@item.Icon</td>
                        <td>@item.Title</td>
                        <td>@item.Desc</td>
                        <td>
                            <a asp-action="edit" asp-controller="service" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                            <a asp-action="delete" asp-controller="service" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>

                        </td>
                    </tr>
                    }



                </tbody>
            </table>
        </div>
    </div>
</div>



